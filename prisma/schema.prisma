generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Profile {
  id String @id @default(uuid())
  quote String? 
  languages String[] @default([])
  libraries String[] @default([])
}

model Skill {
  id String @id @default(uuid())
  title String?
  content String[] @default([])
}

model Project {
  id String @id @default(uuid())
  title String?
  context String?
  description String?
  github_link String @unique
  live_link String?
  api_link String?

  // Relation
  frameworkId String
  framework Framework @relation(fields:[frameworkId],references:[id])
}

model Framework{
  id String @id @default(uuid())
  name String @unique

  //Relation
  projects Project[]
}
